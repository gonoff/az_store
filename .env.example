# =============================================================================
# AZTEAM Store - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# =============================================================================
# API Configuration
# =============================================================================
# AZTEAM ERP API Base URL
NEXT_PUBLIC_API_URL=https://erp.azteamtech.com

# =============================================================================
# Store Configuration
# =============================================================================
NEXT_PUBLIC_STORE_NAME=AZTEAM Custom Apparel
NEXT_PUBLIC_STORE_URL=https://azteamonline.com

# Default locale (en or pt)
NEXT_PUBLIC_DEFAULT_LOCALE=en

# =============================================================================
# Authentication (Server-side only)
# =============================================================================
# Cookie name for JWT storage
JWT_COOKIE_NAME=azteam_auth
# Cookie secret for signing (generate with: openssl rand -base64 32)
JWT_COOKIE_SECRET=

# =============================================================================
# Stripe Payment (Optional - for card payments)
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# PayPal Payment (Optional - alternative payment)
# =============================================================================
NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# =============================================================================
# UploadThing (File uploads)
# =============================================================================
UPLOADTHING_TOKEN=

# =============================================================================
# Google Analytics (Optional)
# =============================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# =============================================================================
# Development/Debug
# =============================================================================
# Set to 'development' for verbose logging
NODE_ENV=development
